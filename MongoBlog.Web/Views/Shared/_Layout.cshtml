<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@this.ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' type='text/css' href='@this.Url.Content("~/Content/bootstrap/bootstrap.min.css")' />
    <script src="@this.Url.Content("~/Scripts/jquery-2.0.3.min.js")" type="text/javascript" ></script>
    <script src="@this.Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript" ></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <div class="dropdown pull-right">
                    <a data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-globe"></span>Select language</a>
                        <ul class="dropdown-menu " role="menu" aria-labelledby="dLabel">
                            @{
                                var returnUrl = this.Request.Url.AbsolutePath;
                            }
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("SetLanguage", "Home", new { lang="eng", returnUrl = returnUrl })">English</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("SetLanguage", "Home", new { lang="ita", returnUrl = returnUrl })">Italian</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("SetLanguage", "Home", new { lang="deu", returnUrl = returnUrl })">German</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("SetLanguage", "Home", new { lang="fre", returnUrl = returnUrl })">French</a></li>
                        </ul>
                </div>
            </div>
        </div>

        <div class="row">
             <div class="col-md-10">
                 <div class="panel panel-primary">
                    <div class="panel-heading"><h2>@this.ViewBag.Title</h2></div>
                    <div class="panel-body">@RenderBody()</div>
                </div>
            </div>
            <div class="col-md-2">
                @{this.Html.RenderAction(actionName: "TagCloud", controllerName: "Tag" );}
                @RenderSection("rightCol", false)
            </div>
        </div>
    </div>
</body>
</html>
