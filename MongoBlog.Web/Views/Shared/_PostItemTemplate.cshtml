@model MongoBlog.Web.ViewModels.PostVM
@{
    var post = this.Model;    
}
@if(null != post){
<div class="col-md-3">    
    <div class="panel panel-success">
        <div class="panel-heading"><h3><a href="@this.Url.Action("Details", new {title = post.Slug})">@post.Title</a></h3></div>
        <div class="panel-body">
            <div>available in: <b>@{this.Html.RenderPartial("_PostLangsLinkTemplate", post);}</b></div>
        @if(null != post.Tags && post.Tags.Any()){
            foreach (var tag in post.Tags)
            { 
                this.Html.RenderPartial("_TagItemTemplate", tag);
            }
        }    
        </div>
    </div>
</div>
}